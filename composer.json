{
   "name": "bauhaus/di",
   "description": "This package implements a simple dependecy injection container.",

   "type": "library",
   "license": "MIT",

   "keywords": [
      "bauhaus",
      "di",
      "dependency injection"
   ],

   "authors": [
      {
         "name": "Felipe Martins",
         "homepage": "http://fefas.net"
      }
   ],

   "support": {
      "issues": "https://github.com/bauhausphp/package-di/issues",
      "source": "https://github.com/bauhausphp/package-di"
   },

   "require": {
      "php": ">=7.0",
      "bauhaus/container": "dev-master"
   },

   "autoload": {
      "psr-4": {
         "Bauhaus\\DI\\": "src/"
      }
   },

   "require-dev": {
      "behat/behat": "~3.0",
      "phpunit/phpunit": "5.3.*"
   },

   "autoload-dev": {
      "psr-4": {
         "Bauhaus\\DI\\": [
            "tests/acceptance/",
            "tests/unit/",
            "tests/doubles/"
         ]
      }
   }
}
