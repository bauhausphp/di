{
   "name": "bauhaus/di-container",
   "description": "Simple dependecy injection container.",

   "type": "library",
   "license": "MIT",

   "keywords": [
      "bauhaus",
      "di",
      "dependency injection",
      "di container",
      "dependency injection container"
   ],

   "authors": [
      {
         "name": "Felipe Martins",
         "homepage": "https://blog.fefas.net"
      }
   ],

   "support": {
      "issues": "https://github.com/bauhausphp/di-container/issues",
      "source": "https://github.com/bauhausphp/di-container"
   },

   "require": {
      "php": ">=7.1",
      "bauhaus/container": "v0.*"
   },

   "autoload": {
      "psr-4": {
         "Bauhaus\\": "src/"
      }
   },

   "require-dev": {
      "phpunit/phpunit": "5.3.*"
   },

   "autoload-dev": {
      "psr-4": {
         "Bauhaus\\": [
            "tests/unit/"
         ]
      }
   }
}
